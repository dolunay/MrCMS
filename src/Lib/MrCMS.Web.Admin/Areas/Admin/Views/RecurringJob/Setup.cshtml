@model MrCMS.Web.Admin.Models.Jobs.SetupRecurringJobModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; 
}

@using (Html.BeginForm("Setup", "RecurringJob", new { Model.Id }, FormMethod.Post))
{
    <fieldset>
        <legend>
            @await Html.Resource("Admin Setup Recurring Job", "Setup Recurring Job") - @Model.Id
            <span class="btn-group pull-right">
                <input type="submit" class="btn-primary btn" value="@await Html.Resource("Setup", configureOptions => configureOptions.DisableInlineEditing())"/>
            </span>
        </legend>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label asp-for="Cron">Cron</label>
                    <input asp-for="Cron" type="text" class="form-control" data-cron-expression placeholder="Enter cron expression like 0 * * * *"/>
                    <span asp-validation-for="Cron"></span>
                    <p data-cron-description></p>
                    <div class="cron-examples">
                        <strong>Examples:</strong>
                        <ul>
                            <li>Every 5 minutes: <code>*/5 * * * *</code></li>
                            <li>Every 2 hours: <code>0 */2 * * *</code></li>
                            <li>Once a day at 11pm: <code>0 23 * * *</code></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}