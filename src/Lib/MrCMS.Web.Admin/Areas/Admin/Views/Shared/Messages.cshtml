@using MrCMS.Web.Admin.Infrastructure.Helpers
@model dynamic


@if (TempData.SuccessMessages() != null && TempData.SuccessMessages().Any())
{
    <div class="alert alert-success mb-2">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @Html.Raw(string.Join("<br />", TempData.SuccessMessages()))
    </div>
}
@if (TempData.ErrorMessages().Any())
{
    <div class="alert alert-danger mb-2">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @Html.Raw(string.Join("<br />", TempData.ErrorMessages()))
    </div>
}
@if (TempData.InfoMessages().Any())
{
    <div class="alert alert-info mb-2">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @Html.Raw(string.Join("<br />", TempData.InfoMessages()))
    </div>
}